#include<stdio.h>
void main(){
    int A[10], i, n;
    int x, pos;
    printf("enter the limit array:\n");
    scanf("%d",&n);

    printf("enter the element array:\n");
    for (i=0;i<n;i++)
    {
        scanf("%d",&A[i]);
    }
    x = 100;
    pos = 3;
    for (i=0;i<n;i++)
    {
        if ((i+1)==pos)
        {
            A[i] = x;
            break;
        }
        
    }
    printf("Array After Updated:\n");
    for(i=0;i<n;i++)
    {
        printf("%d\t",A[i]);
    }
    
}
